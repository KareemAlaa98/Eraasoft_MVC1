@model List<Doctor>

<div class="container">
    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col-md-4">
                <div class="card" style="width: 20rem;">
                    <img class="card-img-top" src="/images/doctor@(i+1).jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@Model[i].Name</h5>
                        <p class="card-text">Specialization: @Model[i].Specialization</p>
                        <a href="/Doctor/completeappointment?id=@(i+1)" class="btn btn-primary">Book an appointment</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
